- name: {{ task_name }}
  templateType: Task
  deadline: {{ deadline }}
  task:
    container:
      name: {{ task_name }}-container
      image: chaos-hunter/k8sapi:1.0
      imagePullPolicy: IfNotPresent
      command: ["/bin/bash", "-c"]
      args: ["python /chaos-hunter/{{ unittest_path }} --duration {{ duration }}"]
      volumeMounts:
        - name: pvc-volume
          mountPath: /chaos-hunter
    volumes:
      - name: pvc-volume
        persistentVolumeClaim:
          claimName: pvc