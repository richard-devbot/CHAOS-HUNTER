- name: {{ task_name }}
  templateType: Task
  deadline: {{ deadline }}
  task:
    container:
      name: {{ task_name }}
      image: python:{{ py_version }}
      command: ["/bin/bash", "-c"]
      args: 
        - |
          pip install kubernetes &&
          start_time=$SECONDS
          deadline={{ deadline }}
          while true; do
            current_time=$SECONDS
            elapsed_time=$((current_time - start_time))
            if [ $elapsed_time -ge $deadline ]; then
              echo "Deadline reached, exiting loop."
              break
            fi
            python /chaos-hunter/{{ unittest_fpath }}
            sleep {{ interval }}
          done
      volumeMounts:
        - name: pvc-volume
          mountPath: /chaos-hunter
    volumes:
      - name: pvc-volume
        persistentVolumeClaim:
          claimName: pvc